<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flowora.Pages.newplantPage"
             Title="nieuwe plant">
    <Grid
     RowDefinitions=".20*, .20*, .20*, .20*, .20*"
     ColumnDefinitions=".20*, .70*, .10*"
     Padding="0"
     RowSpacing="10">
        <Image
             Grid.ColumnSpan="5"
             Grid.RowSpan="5"
             Source="app_background.png"
             Aspect="AspectFill"
             HorizontalOptions="Start"/>

        <Entry
            Grid.Row="1"
            Grid.Column="1"
            x:Name="PlantNameEntry"
            Placeholder="nieuwe plantnaam"
            BackgroundColor="#769c79"
            TextColor="Black"
            FontSize="20"
            HorizontalOptions="Center"
            HeightRequest="50"
            WidthRequest="250"
            TranslationX="-30"/>

        <Button
            Grid.Row="4"
            Grid.Column="2"
            TranslationX="-30"
            HeightRequest="70"
            WidthRequest="70"
            Text="voeg toe"
            LineBreakMode="WordWrap"
            BackgroundColor="DarkGreen"
            Clicked="OnAddPlantClicked"/>

    </Grid>
</ContentPage>